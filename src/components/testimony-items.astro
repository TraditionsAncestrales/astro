import UiCarousel from './ui-carousel.astro';
import UiSection from './ui-section.astro';

// PROPS ===================================================================================================================================
const {items} = Astro.props;
const options = {
  type: 'fade',
  arrows: false,
  pagination: false,
  autoplay: true,
  easing: 'linear',
  speed: 1000,
  fixedWidth: '100%',
  rewind: true,
