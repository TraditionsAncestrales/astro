---
import type { z } from 'zod';
import type { zFormControlP } from '~/data/schemas.ui';

// PROPS =================================================================================================================================
const {errors, label, name} = Astro.props;

// STYLES =================================================================================================================================
const {class: cEl = '', 'class:list': classes} = Astro.props;

// TYPES =================================================================================================================================
export type Props = z.infer<typeof zFormControlP>;
---

<div class:list={['w-full', cEl, classes]}>
  {
    label && (
      <label for={name} class="mb-1">
        {label}
      </label>
    )
  }
  <slot />
  <label for={name}>{errors.join('\n')}</label>
</div>
