---
import type { z } from 'zod';
import type { zUiLinkBtnP } from '~/schemas/ui';
import { BTN } from '~/styles/ui';

// PROPS ===================================================================================================================================
const {href, intent = 'primary', text} = Astro.props;

// STYLES ==================================================================================================================================
const {class: cEl = '', 'class:list': classes = []} = Astro.props;

// TYPES ===================================================================================================================================
export type Props = z.infer<typeof zUiLinkBtnP>;
---

<a href={href} class:list={[BTN({intent}), cEl, ...classes]}>{text}</a>
