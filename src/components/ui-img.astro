---
import type { z } from 'zod';
import type { zUiImgP } from '~/data/schemas.ui';
import { getImageProps } from '~/data/ui';

// PROPS ===================================================================================================================================
const {image, loading = 'lazy'} = Astro.props;

// VARS ====================================================================================================================================
const props = getImageProps(image);

// STYLES ================================================================================================================================
const {class: cEl = '', 'class:list': classes = []} = Astro.props;

// TYPES ===================================================================================================================================
export type Props = z.infer<typeof zUiImgP>;
---

<img loading={loading} alt="" class:list={['h-auto', cEl, ...classes]} {...props} />
