---
import ProductItems from '~/components/product-items.astro';
import Layout from '~/layouts/layout.astro';
import { getShopData } from '~/server/api';

// DATA ====================================================================================================================================
const data = await getShopData();
const {items, layout} = data;
---

<Layout {...layout}>
  <ProductItems border="top" items={items} class="pb-24" />
</Layout>
