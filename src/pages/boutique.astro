---
import RecordsItems from "@/components/records-items.astro";
import { getProducts } from "@/lib/pocketbase";
import Layout from "@/pages/_/layout.astro";
import { helpersFrom } from "astro-pocketbase";

// DATA ************************************************************************************************************************************
const products = await getProducts(helpersFrom({ pocketbase: Astro.locals.pocketbase, cache: import.meta.env.DEV ? "1d" : undefined }));

// VARS ************************************************************************************************************************************
const seo = { title: "La Boutique", description: "Retrouvez tous mes produits dans la boutique." };
---

<Layout {seo}>
  <RecordsItems title="Produit" items={products} border="all" intent="light">
    <p>Il n'y a actuellement aucun produit dans la boutique.</p>
  </RecordsItems>
</Layout>
