---
import { PortableText } from 'astro-portabletext';
import type { z } from 'zod';
import type { zUiTextP } from '~/schemas/ui';
import UiTextBlock from './ui-text-block.astro';
import UiTextMark from './ui-text-mark.astro';

const {text} = Astro.props;

const components = {block: UiTextBlock, mark: UiTextMark};

// TYPES ===================================================================================================================================
export type Props = z.infer<typeof zUiTextP>;
---

<article>
  <PortableText value={text} components={components} />
</article>
